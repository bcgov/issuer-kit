    "@types/jsonwebtoken": "^9.0.0",
    "@types/mocha": "^10.0.1",
    "@types/serve-favicon": "^2.5.3",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "shx": "^0.3.4",
    "ts-mocha": "^10.0.0",
