{
  "name": "api",
  "description": "Issuer Kit API",
  "version": "1.0.0",
  "homepage": "https://github.com/bcgov/issuer-kit",
  "private": true,
  "main": "src",
  "keywords": [
    "feathers"
  ],
  "author": {
    "name": "Emiliano Suñé",
    "email": "emiliano.sune@gmail.com"
  },
  "contributors": [],
  "bugs": {},
  "directories": {
    "lib": "src",
    "test": "test/",
    "config": "config/"
  },
  "engines": {
    "node": "^18.0.0",
    "npm": ">= 8.0.0"
  },
  "scripts": {
    "test": "npm run compile && npm run mocha",
    "dev": "ts-node-dev --no-notify src/",
    "serve": "npm run compile && node lib/",
    "mocha": "ts-mocha \"test/**/*.ts\" --recursive --exit",
    "compile": "shx rm -rf lib/ && tsc",
    "build": "tsc",
    "start": "node lib/"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": []
  },
  "types": "lib/",
  "dependencies": {
    "@feathersjs/configuration": "^4.5.15",
    "@feathersjs/errors": "^4.5.15",
    "@feathersjs/express": "^4.5.15",
    "@feathersjs/feathers": "^4.5.15",
    "@feathersjs/socketio": "^4.5.18",
    "@feathersjs/transport-commons": "^4.5.15",
    "axios": "^1.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "feathers-hooks-common": "^6.1.5",
    "feathers-mailer": "^3.1.0",
    "feathers-mongodb": "^6.4.1",
    "feathers-swagger": "^2.0.0",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.0",
